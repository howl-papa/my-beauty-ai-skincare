# My Beauty AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mybeauty_ai
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# OPENAI API CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.3

# Rate limiting
OPENAI_RPM=3000
OPENAI_TPM=40000

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================
VECTOR_STORE_PROVIDER=chroma
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION=beauty_knowledge

# Pinecone settings (if using Pinecone instead of ChromaDB)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX_NAME=beauty-ai

# Vector and RAG settings
EMBEDDING_DIMENSION=1536
SIMILARITY_METRIC=cosine
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
SECRET_KEY=change-this-to-a-secure-secret-key-in-production
JWT_SECRET_KEY=change-this-to-a-secure-jwt-secret-key-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_PROVIDER=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL settings (in seconds)
INGREDIENT_CACHE_TTL=86400
PRODUCT_CACHE_TTL=3600
CONFLICT_CACHE_TTL=7200
ROUTINE_CACHE_TTL=1800

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Server settings
APP_HOST=0.0.0.0
APP_PORT=5000

# Application metadata
APP_NAME=My Beauty AI
APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CONFLICT_DETECTION=true
ENABLE_ROUTINE_OPTIMIZATION=true
ENABLE_ANALYTICS=true
ENABLE_KFDA_INTEGRATION=false

# Data source API keys
KFDA_API_KEY=your_kfda_api_key_if_available

# Medical disclaimer settings
REQUIRE_MEDICAL_DISCLAIMER=true
MAX_SEVERITY_NO_WARNING=low

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT={time} | {level} | {name}:{function}:{line} | {message}
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/beauty_ai.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# External logging (optional)
SENTRY_DSN=

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@mybeauty-ai.com
ADMIN_EMAIL=admin@mybeauty-ai.com

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Set to true for development features
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# Testing database (optional separate DB for tests)
TEST_DB_NAME=mybeauty_ai_test
